#!/bin/sh
set -x
env

mkdir -p $PWD/puppet/manifests

cat  > $PWD/puppet/manifests/site.pp << !!!
  import 'hello.pp'
!!!

cat  > $PWD/puppet/manifests/hello.pp << !!!
  node 'vagrant-centos64.vagrantup.com' {
    file { '/tmp/helloworld':
      content => "Hello World\n",
    }
  }
!!!

sudo apt update

sudo apt install default-jre

sudo apt -y install dpkg

sudo dpkg -i apt.deb

sudo apt-get -f -y install  openjdk-8-jre-headless

  
